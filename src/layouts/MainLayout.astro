---
import {Image} from 'astro:assets';
import ogrodjeLogo from "../assets/ogrodje-logo-base.png"
const ogrodjeLogoSrc = `url(${ogrodjeLogo.src})`;

const {title} = Astro.props;

const getTitle = (title: string | undefined): string => {
    const mainTitle = "The TTTM Challenge"
    return title ? title + " - " + mainTitle : mainTitle
}
---
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{getTitle(title)}</title>
</head>
<body>
<div class="wrap">
    <nav class="nav">
        <a href="/" class="logo about">The <span class="main">TTTM</span> Challenge</a>
        <!-- <a href="/rankings" class="rankings">Rankings</a> -->
        <a href="/sandbox" class="sandbox">Sandbox</a>
    </nav>
    <h1>{title}</h1>
    <article>
        <slot/>
    </article>
    <footer>
        <div class="pwd">Powered by</div>
        <div class="logos">
            <a href="https://ogrodje.si" class="logo ogrodje" target="_blank">Ogrodje</a>
        </div>
        <div class="join-us">
            <div><a href="https://bit.ly/discord-ogrodje" target="_blank">Join us on Discord @ <code>#tttm-challenge</code>.</a></div>
        </div>
    </footer>
</div>
</body>
</html>
<style lang="scss" is:global define:vars={{ogrodjeLogoSrc}}>
  // Colors: https://x.com/alexcristache/status/1841852966359146798?t=AZl7vBZcaJvRyxx6Yz_g-w
  @use "sass:list";
  @use "sass:color";

  $font-stack: Helvetica, Arial;
  $background-color: #000000;
  $primary-color: #FFFFFF;
  $logo-color: #ff6500;

  html, body {
    margin: 0;
    padding: 0;
  }

  body {
    $font-stack: list.append($font-stack, sans-serif);
    font-family: $font-stack;
    padding: 20px;
    background-color: $background-color;
    color: $primary-color;
  }

  pre {
    padding: 10px
  }

  body, p, label, button, input, select, textarea, option {
    font-size: 12pt;
    line-height: 15pt;
  }

  input, select, option {
    padding-left: 10px;
    padding-right: 10px;
  }

  a {
    color: #999;
  }

  nav.nav {
    line-height: 40px;
    height: 40px;
    display: block;
    clear: both;
    margin-bottom: 20px;

    .logo {
      background-color: $logo-color;
      padding-left: 10px;
      padding-right: 10px;
      text-decoration: none;

      span.main {
        font-weight: 700;
      }

      &:hover {
        background-color: color.grayscale($logo-color);
      }
    }

    .logo, a {
      color: #FFFFFF;
      margin-right: 5px;
      display: inline-block;
      height: 40px;
      line-height: 40px;
      padding-left: 10px;
      padding-right: 10px;
    }

    a:hover {
      background-color: color.scale(#333, $lightness: 10%);
    }
  }

  h1, h2, h3, h4 {
    font-weight: 300;
    margin-bottom: 20px;
    line-height: 40px;
  }

  div.wrap {
    max-width: 1200px;
    margin: 0 auto;
  }

  table {
    background-color: #24292e;
    border: 1px solid #666;
    border-collapse: collapse;
    border-spacing: 0;

    th, td {
      padding: 5px;
      margin: 0;
    }

    thead th {
      border-bottom: 2px solid #eee;
    }
  }

  .form-group {
    margin-bottom: 5px;

    label {
      display: inline-block;
      width: 200px;
      margin-right: 10px;
    }

    input {
      width: 500px;
    }
  }

  footer {
    border-top: 1px solid #2c2c2c;
    display: block;
    margin-top: 100px;

    line-height: 40px;

    display: block;
    height: 100px;

    .pwd, .logos, .join-us {
      display: inline-block;
      line-height: 100px;
      height: 100px;
      float: left;
      margin-right: 10px;
      margin-left: 20px;
    }

    .join-us {
      float: right;
      padding-right: 20px;
    }

    .pwd {

    }

    .logos {
      .ogrodje {
        overflow: hidden;
        text-indent: -9999px;
        display: block;
        background-image: var(--ogrodjeLogoSrc);
        background-position: center center;
        background-clip: content-box;
        background-size: contain;
        background-repeat: no-repeat;
        height: 100px;
        width: 100px;
      }
    }
  }
</style>